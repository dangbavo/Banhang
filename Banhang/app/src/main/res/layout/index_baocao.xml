<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffe1ad">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BÁO CÁO THỐNG KÊ"
            android:textSize="27sp"
            android:layout_margin="20dp"
            android:textColor="#ff1d0cff"/>
        <Button
            android:id="@+id/bt_doanhthu"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Báo cáo doanh thu"
            android:background="#ff7eccff"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/bt_thu"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Báo cáo phiếu thu"
            android:background="#ff7eccff"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/bt_chi"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Báo cáo doanh chi"
            android:background="#ff7eccff"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/bt_tonkho"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Báo cáo tồn kho"
            android:background="#ff7eccff"
            android:layout_margin="2dp"/>
    </LinearLayout>


</RelativeLayout>