<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_bh_ctkh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/thanhtien_bh_ctkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: "
            android:textColor="#ff1d0cff"/>
        <TextView
            android:id="@+id/sotien_bh_ctkh"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Số tiền" />
        </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Searchkh"
        android:hint="Nhập tên sản phẩm vào !"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
       >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            >
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" ID Hàng"
                android:id="@+id/bh_main0"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" Mã hàng"
                android:id="@+id/bh_main1"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=" Tên hàng"
                android:id="@+id/bh_main2"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" Đơn giá"
                android:id="@+id/bh_main6"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=" SL tồn kho"
                android:id="@+id/bh_main4"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" Tên loại hàng"
                android:id="@+id/bh_main5"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:background="#ff3f35ff"
                android:layout_margin="1dp"
                />
        </TableRow>
        </TableLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bh_lv"
            android:textColor="@android:color/holo_blue_bright"
            android:choiceMode="singleChoice"
            android:background="#fffff4b9"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            />
    </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
    <FrameLayout
        android:id="@+id/content_bh_ctkh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_bh_ctkh"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
    </android.support.v4.widget.DrawerLayout>