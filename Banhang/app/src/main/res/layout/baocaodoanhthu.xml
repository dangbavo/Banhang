<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_bcdt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffe1ad"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tungay_bcdt"
                android:hint="Chọn từ ngày"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toingay_bcdt"
                android:hint="Chọn tới ngày"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/xachnhan_bcdt" />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" MÃ SỐ PHIẾU"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text=" MÃ KHÁCH HÀNG"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text=" TÊN KHÁCH HÀNG"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" NGÀY BÁN"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text=" ĐỊA CHỈ"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" SỐ ĐIỆN THOẠI"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" DOANH THU"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text=" NGƯỜI THU"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                    </TableRow>
                </TableLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listchon_bcdt"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_marginBottom="10dp"
                    android:choiceMode="singleChoice"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_bcdt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_bcdt"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>