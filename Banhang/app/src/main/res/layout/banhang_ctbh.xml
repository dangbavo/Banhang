<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_ctbh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffe1ad"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tenkh_ctbh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách hàng: "
            android:textColor="#ff1d0cff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textColor="#ff1d0cff"/>
            <TextView
                android:id="@+id/thanhtien_ctbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0vnđ"
                android:textColor="#ff1d0cff"/>
        </LinearLayout>
        <AutoCompleteTextView
            android:hint="Chọn hàng hóa"
            android:textSize="13dp"
            android:inputType="numberSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autotexthh_ctbh"
            android:gravity="center_horizontal"
            android:completionThreshold="1"
            android:ems="1"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/soluonghang_ctbh"
                android:hint="Nhập số lượng"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Mã Số Phiếu:"/>
            <EditText
                android:id="@+id/masophieu_ctbh"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Đồng bộ"
            android:id="@+id/dongbo_ctbh"
            android:background="#ff1d0cff"
            android:gravity="center"
            android:layout_margin="3sp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Xác nhận"
            android:id="@+id/xacnhan_ctbh"
            android:background="#ff1d0cff"
            android:gravity="center"
            android:layout_margin="3sp"
             />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Hủy bỏ"
            android:id="@+id/huybo_ctbh"
            android:background="#ff1d0cff"
            android:gravity="center"
            android:layout_margin="3sp"
           />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH SÁCH HÀNG HÓA ĐÃ CHỌN"
            android:textColor="#ff1d0cff"
            android:layout_gravity="center"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                >
                <TableRow>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" ID Hàng"
                        android:id="@+id/id_hang_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" Mã hàng"
                        android:id="@+id/ma_hang_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text=" Tên hàng"
                        android:id="@+id/ten_hang_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" Đơn giá"
                        android:id="@+id/dongia_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text=" SL tồn kho"
                        android:id="@+id/tonkho_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text=" SL Mua"
                        android:id="@+id/slmua_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" Tên loại hàng"
                        android:id="@+id/loai_hang_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" Đơn vị tính"
                        android:id="@+id/dvt_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text=" Thành tiền"
                        android:id="@+id/tt_ctbh"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal"
                        android:background="#ff3f35ff"
                        android:layout_margin="1dp"
                        />
                </TableRow>
            </TableLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/listchon_ctbh"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_marginBottom="10dp"
                    android:choiceMode="singleChoice"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH SÁCH ĐƠN ĐẶT HÀNG"
            android:textColor="#ff1d0cff"
            android:layout_gravity="center"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" BH_ID"
                            android:id="@+id/id_hang1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" KH_ID"
                            android:id="@+id/ma_hang1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text=" Mã số phiếu"
                            android:id="@+id/ten_hang1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Ngày bán"
                            android:id="@+id/dongia1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=" Người bán"
                            android:id="@+id/tonkho1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Số tiền thu"
                            android:id="@+id/loai_hang1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Số tiền đã thu"
                            android:id="@+id/dvt1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text=" Từ kho"
                            android:id="@+id/tt1_ctbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                    </TableRow>
                </TableLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listdaban_ctbh"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_marginBottom="10dp"
                    android:choiceMode="singleChoice"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_ctbh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_ctbh"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>