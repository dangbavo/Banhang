<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_ctkh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ID KH"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <TextView
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/id_ctkh"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="MÃ KH"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/ma_khachhang"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="TÊN KH"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/ten_khachhang"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="LOẠI KH"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/loaikhachhang"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ĐỊA CHỈ"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/diachi"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="SĐT"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/sdt"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="THÀNH PHỐ"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/thanhpho"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="QUẬN/HUYỆN"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/quanhuyen"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:id="@+id/capnhat_ctkh"
            android:background="#ff1d0cff"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/xoa_ctkh"
            android:layout_toStartOf="@+id/xoa_ctkh" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Xóa KH"
            android:id="@+id/xoa_ctkh"
            android:background="#ff1d0cff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content_ctkh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_ctkh"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>