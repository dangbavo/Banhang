<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_ctbh_dsbh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffe1ad"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn hàng: "
                android:textColor="#ff1d0cff"/>
            <TextView
                android:id="@+id/tendh_ctbh_dsbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff1d0cff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textColor="#ff1d0cff"/>
            <TextView
                android:id="@+id/thanhtien_ctbh_dsbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff1d0cff"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Search_ctbh_dsbh"
            android:hint="Nhập tên sản phẩm vào!"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH SÁCH HÀNG HÓA TRONG ĐƠN HÀNG"
            android:textColor="#ff1d0cff"
            android:layout_gravity="center"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" ID_Bán hàng"
                            android:id="@+id/id_hang_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" CTBH_ID"
                            android:id="@+id/ma_hang_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" ID_HANG"
                            android:id="@+id/ten_hang_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text=" Tên hàng"
                            android:id="@+id/dongia_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=" Đơn giá"
                            android:id="@+id/tonkho_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Đơn vị tính"
                            android:id="@+id/loai_hang_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text=" Ngày bán"
                            android:id="@+id/dvt_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text=" Số lượng mua"
                            android:id="@+id/tt_ctbh_dsbh"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            android:background="#ff3f35ff"
                            android:layout_margin="1dp"
                            />
                    </TableRow>
                </TableLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/listchon_ctbh_dsbh"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_marginBottom="10dp"
                    android:choiceMode="singleChoice"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHỈNH SỬA ĐƠN HÀNG ĐÃ CHỌN"
            android:textColor="#ff1d0cff"
            android:layout_gravity="center"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết hàng hóa id: "
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/banhang_idct_dsbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="new text"
                    android:textSize="15sp"/>
                    </TableRow>
            <TableRow>
                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hàng hóa id: "
                    />
                <AutoCompleteTextView
                    android:id="@+id/mahang_ct_dsbh"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="hàng hóa id"
                    android:completionThreshold="1"
                    android:ems="1"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Lượng bán: "
                    android:layout_margin="1dp"
                    />
                <EditText
                    android:id="@+id/slban_ct_dsbh"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="số lượng bán"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên hàng: "
                    android:layout_margin="1dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tenhang_ct_dsbh"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:hint="Tên hàng"
                    android:layout_margin="1dp"
                    android:textSize="13sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá bán "
                    android:layout_margin="1dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/dgb_ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Đơn giá bán"
                    android:layout_margin="1dp"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn vị tính: "
                    android:layout_margin="1dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/dvt_ct_dsbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Đơn vị tính"
                    android:layout_margin="1dp"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/update_ct_dsbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upadate"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/cancel_ct_dsbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_margin="4dp"
                    />
            </TableRow>
        </TableLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_ctbh_dsbh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_ctbh_dsbh"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>