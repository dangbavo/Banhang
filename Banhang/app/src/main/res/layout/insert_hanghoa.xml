<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_inserthh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="MÃ HÀNG:"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/mahang_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="TÊN HÀNG"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/ten_hang_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ĐƠN VỊ TÍNH"
                    android:gravity="center_horizontal"
                    />
                <AutoCompleteTextView
                    android:id="@+id/dvt_is"
                    android:layout_width="200dp"
                    android:completionThreshold="1"
                    android:ems="5"
                    android:hint="Chọn"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="TÊN LOẠI HÀNG"
                    android:gravity="center_horizontal"
                    />
                <AutoCompleteTextView
                    android:id="@+id/ten_loaihh_is"
                    android:layout_width="200dp"
                    android:completionThreshold="1"
                    android:ems="5"
                    android:hint="Chọn"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="GIÁ BÁN:"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/giaban_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="GIÁ VỐN: "
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/giavon_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="SỐ LƯỢNG"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/sl_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="MÀU"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/mau_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="QUY CÁCH"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:id="@+id/quycach_is"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:id="@+id/xacnhan"
            android:background="#ff398aff"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/huybo"
            android:layout_toStartOf="@+id/huybo" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Hủy bỏ"
            android:id="@+id/huybo"
            android:background="#ff398aff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content_inserthh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_ishh"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>