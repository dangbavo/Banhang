<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_ct"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ID HÀNG"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <TextView
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/id_hanghoa"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="MÃ HÀNG"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/ma_hang"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="TÊN HÀNG"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/ten_hang"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="TÊN LOẠI HÀNG"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <AutoCompleteTextView
                    android:textSize="16dp"
                    android:id="@+id/ten_loai_ct"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:ems="1"
                    android:hint="Chọn"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ĐVT"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <AutoCompleteTextView
                    android:textSize="16dp"
                    android:id="@+id/dvt_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:ems="1"
                    android:hint="Chọn"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Số lượng"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/sl"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="GÍA BÁN"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/giaban"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="GIÁ VỐN"
                    android:gravity="center_horizontal"
                    android:textColor="#ff1d0cff"
                    />
                <EditText
                    android:textSize="16dp"
                    android:layout_width="200dp"
                    android:id="@+id/giavon"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    />
            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:id="@+id/capnhat"
            android:background="#ff1d0cff"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/xoa"
            android:layout_toStartOf="@+id/xoa" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Xóa SP"
            android:id="@+id/xoa"
            android:background="#ff1d0cff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content_ct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <ListView android:id="@+id/left_drawer_ct"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>
</android.support.v4.widget.DrawerLayout>